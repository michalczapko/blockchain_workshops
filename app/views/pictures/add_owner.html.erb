<div class='panel'>
  <h2 class="mb-4">Add picture owner</h2>
  <%= simple_form_for :picture, url: :user_picture_transfer do |f| %>
    <div class='form-group'>
      <div class='row'>
        <div class='col-md-12'>
          <%= f.input :owner %>
        </div>
      </div>
    </div>
    <div class='form-actions'>
      <%= f.submit 'Add owner', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>